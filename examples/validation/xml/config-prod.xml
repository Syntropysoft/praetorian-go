<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <app>
        <name>my-app</name>
        <port>80</port>
        <environment>production</environment>
    </app>
    <database>
        <host>prod-db.example.com</host>
        <port>5432</port>
        <name>prod_db</name>
        <user>${DB_USER}</user>
        <password>${DB_PASSWORD}</password>
        <url>postgresql://${DB_USER}:${DB_PASSWORD}@prod-db.example.com:5432/prod_db</url>
    </database>
    <api>
        <base_url>https://api.example.com</base_url>
        <timeout>10000</timeout>
        <retries>5</retries>
    </api>
    <logging>
        <level>info</level>
        <format>json</format>
        <output>file</output>
        <file_path>/var/log/app.log</file_path>
    </logging>
    <security>
        <enabled>true</enabled>
        <cors>
            <origin>https://example.com</origin>
            <credentials>true</credentials>
        </cors>
    </security>
</configuration> 